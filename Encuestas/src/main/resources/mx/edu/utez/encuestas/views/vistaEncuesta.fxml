<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mx.edu.utez.encuestas.controller.VistaEncuestaController"
            prefWidth="800" prefHeight="600"
            stylesheets="@../css/vistaEncuesta.css">

    <VBox spacing="20.0" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
        <!-- Título de la encuesta -->
        <Label fx:id="lblTitulo" styleClass="form-title" />

        <!-- Botón agregar pregunta -->
        <Button text="+ Agregar pregunta" onAction="#abrirModalAgregarPregunta" styleClass="add-question-button" />

        <!-- Contenedor de preguntas -->
        <VBox fx:id="contenedorPreguntas" spacing="15.0" />
    </VBox>
</AnchorPane>
